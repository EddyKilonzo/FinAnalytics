// FinAnalytics - PostgreSQL + Prisma
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums ---

enum Role {
  USER
  ADMIN
}

enum UserType {
  FORM_FOUR_STUDENT
  UNIVERSITY_STUDENT
  RECENT_GRADUATE
  YOUNG_PROFESSIONAL
}

// --- Core models (Phase 2+) ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  role      Role     @default(USER)
  emailVerifiedAt           DateTime?
  emailVerificationTokenHash String?
  emailVerificationTokenExpiresAt DateTime?
  emailVerificationCodeHash String?
  // Onboarding
  userType           UserType?
  incomeSources      Json?     @default("[]")
  onboardingCompleted Boolean  @default(false)
  suspendedAt         DateTime?  // When set, account is suspended; login and token validation reject
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  budgets      Budget[]
  goals        Goal[]
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  color       String?  // e.g. for UI (Food=green, Social=purple)
  createdAt   DateTime @default(now())

  transactions          Transaction[] @relation("Category")
  suggestedTransactions Transaction[] @relation("SuggestedCategory")
  budgets               Budget[]
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(12, 2)
  type        String   // "income" | "expense"
  description String?
  date        DateTime @default(now())
  categoryId  String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // ML categorization (Phase 4)
  suggestedCategoryId String?
  categoryConfidence  Decimal?  @db.Decimal(5, 4) // 0â€“1
  // Income source label (Phase 9): e.g. HELB, parents, part_time_job
  incomeSource String?

  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category          Category? @relation("Category", fields: [categoryId], references: [id], onDelete: SetNull)
  suggestedCategory Category? @relation("SuggestedCategory", fields: [suggestedCategoryId], references: [id], onDelete: SetNull)
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  categoryId String?
  limitAmount Decimal @db.Decimal(12, 2)
  period    String   // "month" | "semester"
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
}

model Goal {
  id            String    @id @default(cuid())
  userId        String
  name          String
  description   String?   // Optional note (e.g. "Rainy-day fund", "New laptop")
  targetAmount  Decimal   @db.Decimal(12, 2)
  currentAmount Decimal   @db.Decimal(12, 2) @default(0)
  deadline      DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
